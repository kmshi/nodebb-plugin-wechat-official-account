{
    "id": "nodebb-plugin-wechat-official-account",
    "name": "wechat official account",
    "description": "integrate nodebb into wechat ecosysyem",
    "library": "./library.js",
    "hooks": [
        { "hook": "static:app.load", "method": "load" },
        { "hook": "action:user.loggedIn", "method": "userLoggedIn" },
        { "hook": "filter:user.delete", "method": "userDelete" },
        { "hook": "filter:auth.init", "method": "getStrategy" },
        { "hook": "filter:auth.list", "method": "getAssociation" },
        { "hook": "action:notification.pushed", "method": "notificationPushed" },
        { "hook": "filter:admin.header.build", "method": "addMenuItem" }
    ],
    "scripts": [
        "static/wxJSSDK.js"
    ]
}